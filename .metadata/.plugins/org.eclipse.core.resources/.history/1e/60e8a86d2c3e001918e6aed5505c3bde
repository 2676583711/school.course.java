package school.course;

/*
 *关于 java 的对象的学习
 */
class Person {
	private String name;
	int age;

	public void speak() {
		System.out.println("我叫"+getName()+",今年"+age+"岁了");
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}
}

public class AboutClass {
	
 
	
	public static void main(String[] args) {
		Person p=new Person();
		p.setName("张三");
		p.age=250;
		p.speak();
		
		
		class Person2 {
			String name;
			int age;

			public void speak() {
				System.out.println("我叫"+name+",今年"+age+"岁了");
			}
		}
		
		
		Person2 p2=new Person2();
		p2.name="张三2";
		p2.age=250;
		p2.speak();
		
	 
		
	}
}
